<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Вторник"
        android:textSize="30dp"
        android:textColor="@color/colorMainWhite"
        android:textAlignment="center"
        android:id="@+id/sunday_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sunday_text"
        android:text="Числитель"
        android:textSize="20dp"
        android:textColor="@color/colorMainWhite"
        android:textAlignment="center"
        android:id="@+id/numeral"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:text="Знаменатель"
        android:textSize="20dp"
        android:textColor="@color/colorMainWhite"
        android:textAlignment="center"
        android:id="@+id/denumeral"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numeral"
        android:layout_marginBottom="257dp">
        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"

            android:layout_width="match_parent"

            android:id="@+id/rv2">
        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>




    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rv9"
        >

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>