<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/title1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/timeStart"
            android:layout_toStartOf="@id/subgroup"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="-2dp"
            android:layout_below="@+id/type"
            android:layout_marginStart="7dp"
            android:text="Программирование"
            android:singleLine="false"

            android:textSize="22sp"
            android:textColor="@color/colorMainWhite"/>

        <TextView
            android:id="@+id/timeStart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:text="9:45"
            android:textColor="@color/colorMainWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timeEnd"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeStart"
            android:text="11:20"
            android:textAlignment="center"
            android:textColor="@color/colorMainWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Перепелкин М.А."
            android:layout_marginTop="-1dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/timeEnd"
            android:layout_below="@+id/title1"
            android:textColor="@color/colorLightGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/classroom"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="27dp"
            android:layout_height="wrap_content"
            android:text="404п"
            android:textAlignment="center"
            android:textColor="@color/colorMainWhite"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subgroup"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:text="@string/subgroup1"
            android:textAlignment="center"
            android:textColor="@color/colorMainWhite"
            android:textSize="11sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/timeEnd"
            android:text="ЛEКЦИЯ"
            android:textAllCaps="true"
            android:textColor="@color/colorLightGray"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>